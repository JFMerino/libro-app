---
import BookItem from "./BookItem.astro";
import {books} from '../data/books'

---

<ul class="grid grid-cols-2 md:grid-cols-3 gap-3">
    {
        books.map(({id, title, img, author, opinion, urlCompra}) => {
        return (
            <li>
                <BookItem id={id} title={title} img={img} author={author} opinion={opinion} urlCompra={urlCompra} />
            </li>
        )
    })
    }
</ul>